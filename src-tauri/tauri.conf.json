{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Twitch Chat Overlay",
  "version": "1.0.0",
  "identifier": "com.lucas-b.twitch-chat-overlay",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Twitch Chat Overlay",
        "width": 400,
        "height": 300,
        "minWidth": 300,
        "minHeight": 200,
        "resizable": true,
        "transparent": true,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; frame-src https://www.twitch.tv https://player.twitch.tv"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
